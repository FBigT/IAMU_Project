<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:clipChildren="false"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/ivBase"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_base"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivRod"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_rod"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@id/ivBase"
        app:layout_constraintStart_toStartOf="@id/ivBase"
        app:layout_constraintEnd_toEndOf="@id/ivBase"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/ivBase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uranium"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/radiation_glow"
            android:alpha="0"/>

        <View
            android:id="@+id/dividerLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/radiation_glow"
            android:alpha="0"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
